apiVersion: apps/v1
kind: Deployment
metadata:
  name: storageoscluster-operator
  namespace: storageos-operator
  labels:
    app: storageoscluster-operator
spec:
  replicas: 1
  selector:
    matchLabels:
      app: storageoscluster-operator
  template:
    metadata:
      labels:
        app: storageoscluster-operator
    spec:
      serviceAccountName: storageoscluster-operator-sa
      containers:
        - name: storageoscluster-operator
          image: {{ storageos_operator_image_repo }}:{{ storageos_operator_image_tag }}
          imagePullPolicy: IfNotPresent
          ports:
          - containerPort: 60000
            name: metrics
          command:
          - cluster-operator
          env:
            - name: WATCH_NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: OPERATOR_NAME
              value: "cluster-operator"
